<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/jobtitle"
        android:adjustViewBounds="true"
       android:id="@+id/item_listview_news_image"
        android:alpha="0.7"
        android:layout_gravity="top"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_margin="5dp"
        android:id="@+id/item_listview_news_title"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:textSize="40sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_listview_news_subtitle"
        android:layout_margin="5dp"
        android:text="all the stuff you should know about tecnology...."
        android:layout_alignBottom="@+id/item_listview_news_image"

        android:textColor="#fff"
        android:textSize="20sp"
        />


</RelativeLayout>
