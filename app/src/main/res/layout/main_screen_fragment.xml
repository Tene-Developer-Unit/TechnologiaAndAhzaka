<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <ImageView
                android:id="@+id/weeklyphoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"



                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitCenter"

                tools:src="@drawable/sufa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom|right"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weakly_photo"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold"
                />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl"
                    android:layout_gravity="right">
                    <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:src="@android:drawable/ic_menu_info_details"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="שלום"
                        android:textColor="#FFF"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="קורסים טכנולוגים"
                android:textColor="@color/mainTextColor"
                android:textSize="25sp" />


            <Gallery
                android:id="@+id/main_screen_fragment_coures_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="20dp"
                android:layoutMode="opticalBounds"

                android:numColumns="2"
                android:scrollbars="horizontal"
                android:smoothScrollbar="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#fff"
            android:elevation="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/whatsneTitle"
                android:textColor="@color/mainTextColor"

                android:textSize="25sp" />

            <!--<fragment-->
            <!--android:id="@+id/webview_fragment"-->
            <!--android:name="com.ezra.elon.technologiaandahzaka.Fragments.NewsFragment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--tools:layout="@layout/webview_news">-->

            <!--</fragment>-->
        </LinearLayout>
    </LinearLayout>
</ScrollView>

</FrameLayout>