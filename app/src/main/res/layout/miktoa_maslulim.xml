<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mikbg"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hacsharot_title_info"
        android:layout_marginRight="16dp"
        style="@style/about_us_text_style"
        android:textColor="#0075bc"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="8dp"
        android:background="#c0ffffff"
        >

        <TextView

            android:text="@string/hachshara_info"
            style="@style/miktzoa_text_style" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/haasaka_title_info"
        android:layout_marginRight="16dp"
        style="@style/about_us_text_style"
        android:textColor="#0075bc"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="8dp"
        android:background="#d0ffffff"
        >

        <TextView

            android:text="@string/haasaka_info"
            style="@style/miktzoa_text_style" />

    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>